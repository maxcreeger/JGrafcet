<?xml version="1.0" encoding="UTF-8"?>

<grafcet>
	<steps>
		<step num="1" x="2" y="1" initial="true">
			<actions>
				<action>Do something</action>
			</actions>
		</step>
		<step num="2" x="1" y="3"/>
		<step num="3" x="2" y="3">
			<actions>
				<action>Do some stuff</action>
				<action>Do more stuff</action>
			</actions>
		</step>
		<step num="4" x="3" y="3"/>
	</steps>
	<transitions>
		<transition num="1" x="1" y="2">
			<required-steps>
				<required step="1"/>
			</required-steps>
			<executed-steps>
				<executed step="2"/>
				<executed step="3"/>
				<executed step="4"/>
			</executed-steps>
		</transition>
		<transition num="2" x="1" y="4">
			<required-steps>
				<required step="2"/>
			</required-steps>
			<executed-steps>
				<executed step="1"/>
			</executed-steps>
		</transition>
		<transition num="3" x="2" y="4">
			<required-steps>
				<required step="3"/>
			</required-steps>
		</transition>
	</transitions>
</grafcet>